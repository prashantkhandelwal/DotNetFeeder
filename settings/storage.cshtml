@{
    Layout = "~/settings/_SettingsLayout.cshtml";
    Page.Title = ".NET Feeder - Storage Settings";
}

<div class="col-xs-1 col-sm-11">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="storage" class="control-label col-xs-2">Storage Provider</label>
            <div class="col-xs-2">
                <select class="form-control" id="storage">
                    <option>Mongolab</option>
                    <option>Azure Storage</option>
                </select>
            </div>
        </div> 

        <div id="mongolab">
            <div class="form-group">
                <label for="mongourl" class="control-label col-xs-2">Mongolab DB URL</label>
                <div class="col-xs-7">
                    <input type="text" class="form-control" id="mongourl" placeholder="XX000000.mongolab.com:00000/dotnetfeeder">
                </div>
            </div>
            <div class="form-group">
                <label for="dbuser" class="control-label col-xs-2">User Name</label>
                <div class="col-xs-7">
                    <input type="text" class="form-control" id="dbuser" placeholder="User name for Mongolab DB">
                </div>
            </div>
            <div class="form-group">
                <label for="dbpassword" class="control-label col-xs-2">Password</label>
                <div class="col-xs-7">
                    <input type="text" class="form-control" id="dbpassword" placeholder="Password for Mongolab DB">
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-10">
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
