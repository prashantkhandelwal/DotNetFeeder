@{
    Layout = "~/settings/_SettingsLayout.cshtml";
    Page.Title = ".NET Feeder - General Settings";
}

<div class="col-xs-10 col-sm-11">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="pagesize" class="control-label col-xs-2">Page Size</label>
            <div class="col-xs-2">
                <input type="number" class="form-control" id="pagesize" placeholder="Max. upto 100" value="10">
            </div>
        </div>
        <div class="form-group">
            <label for="cache" class="control-label col-xs-2">Cache Time</label>
            <div class="col-xs-2">
                <input type="number" class="form-control" id="cache" placeholder="Time in minutes" value="30">
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>